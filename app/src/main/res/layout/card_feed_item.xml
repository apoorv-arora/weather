<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feed_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    android:paddingLeft="@dimen/size10"
    android:paddingRight="@dimen/size10"
    android:paddingTop="@dimen/size5"
    android:paddingBottom="@dimen/size5"
    android:layout_marginTop="@dimen/size5"
    android:layout_marginBottom="@dimen/size5"
    android:layout_marginLeft="@dimen/size10"
    android:layout_marginRight="@dimen/size10">

    <LinearLayout
        android:id="@+id/snippet_recommended_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="fitXY"/>

        <sanshinkan.org.warrior.utils.views.TextViewBold
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size18"
            android:text="hey there bro"
            android:padding="@dimen/size10"
            android:gravity="center"
            android:textColor="@color/black_trans_fifty"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/country_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="fitXY"/>

            <sanshinkan.org.warrior.utils.views.TextViewRegular
                android:id="@+id/country_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size12"
                android:text="hey there bro"
                android:paddingLeft="@dimen/size10"
                android:textColor="@color/black_trans_fifty"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size10">

            <sanshinkan.org.warrior.utils.views.TextViewLight
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size14"
                android:textColor="@color/blueButtonColor"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:paddingTop="@dimen/size10"
                android:text="hey there bro"
                android:paddingBottom="@dimen/size10"
                android:maxLines="1"/>

            <sanshinkan.org.warrior.utils.views.TextViewLight
                android:id="@+id/days_to_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size14"
                android:textColor="@color/blueButtonColor"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:paddingTop="@dimen/size10"
                android:text="hey there bro"
                android:paddingBottom="@dimen/size10"
                android:maxLines="1"/>


        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>